<%# Паршиал дляотображения формы создания нового события %>
<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label "Название" %>
    <div class="input-group">
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-edit"></span>
      </div>
      <%= f.text_field :title, class: 'form-control', placeholder: "Введите название", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Адрес" %>
    <div class="input-group">
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-map-marker"></span>
      </div>
      <%= f.text_field :address, class: 'form-control', placeholder: "Введите адрес", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Дата и время" %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label "Описание" %>
    <%= f.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
