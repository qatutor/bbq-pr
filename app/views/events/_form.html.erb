<%# Паршиал для отображения формы создания нового события %>
<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title %>
    <div class="input-group">
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-edit"></span>
      </div>
      <%= f.text_field :title, class: 'form-control', placeholder: t('placeholder.event_name'), required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <div class="input-group">
      <div class="input-group-addon">
        <span class="glyphicon glyphicon-map-marker"></span>
      </div>
      <%= f.text_field :address, class: 'form-control', placeholder: t('placeholder.address'), required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="actions">
    <%= f.submit t('actions.save'), class: 'btn btn-primary' %>
    <%= link_to t('actions.back'), :back , class: 'btn btn-primary'%>
  </div>
<% end %>
