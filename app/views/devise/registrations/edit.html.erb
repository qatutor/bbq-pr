<h2>Редактировать пользователя <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group mb-5">
    <%= f.label "Пароль" %> <i>(оставь пустым, если не нужно менять)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>(не менее <%= @minimum_password_length %> символов)</em>
    <% end %>
  </div>

  <div class="form-group mb-5">
    <%= f.label "Подтверждение пароля" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-5">
    <%= f.label "Текущий пароль" %> <i>(необходим текущий пароль для изменений)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить", class: "btn btn-primary" %>
  </div>
<% end %>

<h2> Удалить аккаунт </h2>
<p><%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" },
                          method: :delete, class: "btn btn-primary" %></p>

<%= link_to "Назад", :back %>
