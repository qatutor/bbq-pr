<h2>Редактировать пользователя </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true%>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :password %> <i><%= t('messages.info.leave_password_blank') %></i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <em>(<%= I18n.t :password_count, count: @minimum_password_length %>)</em>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-6 mb-5">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-6 mb-5">
      <%= f.label :current_password %> <i><%= t('messages.info.current_password_required') %></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('actions.update'), class: "btn btn-primary" %>
  </div>
<% end %>

<h2> Удалить аккаунт </h2>
<p><%= button_to t('actions.destroy_account'), registration_path(resource_name), data: { confirm: t('messages.info.confirmation') },
                          method: :delete, class: "btn btn-primary" %></p>

<%= link_to t('actions.back'), :back %>
