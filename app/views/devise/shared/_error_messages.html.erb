<% if resource.errors.any? %>
  <div id="error_explanation" >
    <div class="text-danger buffer-bottom">В вашей форме <%= I18n.t :errors_count, count: resource.errors.count %> </div>
        <% resource.errors.full_messages.each do |message| %>
          <div>
            <div class="alert alert-danger alert-dismissible col-sm-7" role="alert">
              <%= message %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
        <% end %>
  </div>
<% end %>
